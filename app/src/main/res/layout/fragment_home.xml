<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/viewPagerHt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/viewPager"
                android:layout_alignRight="@id/viewPager"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding8"
                android:paddingRight="@dimen/padding8" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/gridview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>
